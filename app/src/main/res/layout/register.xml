<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/layout_register"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_marginTop="25sp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            >
            <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:background="@drawable/borderradius"
            android:drawableRight="@mipmap/password"
            android:hint="UserName"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/borderradius"
                android:drawableRight="@drawable/icon_10"
                android:hint="Password"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/borderradius"
                android:drawableRight="@drawable/icon_12"
                android:hint="First Name"
                />
            <EditText
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/borderradius"
                android:drawableRight="@drawable/icon_12"
                android:hint="Last Name"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/borderradius"
                android:drawableRight="@drawable/icon_14"
                android:hint="Phone Number"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/borderradius"
                android:drawableRight="@drawable/icon_16"
                android:hint="Email"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
